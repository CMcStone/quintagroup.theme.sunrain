<div id="subscribe-links" i18n:domain="plone">
    <tal:docactions tal:condition="view/actions">
    <dl>
        <dt>Subscribe:</dt>
        <dd>
            <ul tal:define="normalizeString nocall: context/@@plone/normalizeString">
            <tal:actions repeat="action view/actions">
                <li tal:attributes="id python:'document-action-' + normalizeString(action['id'])">
                    <a href=""
                       tal:attributes="href action/url;
                                       title action/description"
                       tal:define="icon python:action.get('icon', None)">
                        <img alt="" src=""
                             tal:condition="icon"
                             tal:attributes="src icon; alt action/title;" />
                        <tal:action tal:content="action/title" i18n:translate="">
                            Action name
                        </tal:action>
                    </a>
                </li>
            </tal:actions>
            </ul>
        </dd>
    </dl>
    </tal:docactions>
</div>
